namespace HomeWork1
{
    class Program
    {
        static void Main(string[] args)
        {
            Doubler doubler = new Doubler();
        LabelResetGame:
            doubler.StartGame();
        LabelRefresh:
            Console.Clear();
            Console.Title = "[C#] - Doubler";
            Console.ForegroundColor = ConsoleColor.DarkGreen;
            Console.WriteLine($"[{new string('*', 26)}]-Doubler-[{new string('*', 26)}]");
            Console.ForegroundColor = ConsoleColor.DarkCyan;
            Console.WriteLine($">Нужно набрать: {doubler.FinishValue}\t>Кол-во очков: {doubler.CurrentValue}\t>Кол-во ходов: {doubler.Step}\n");
            if (doubler.CurrentValue > doubler.FinishValue)
            {
                Console.ForegroundColor = ConsoleColor.Red;
                Console.WriteLine("Вы проиграли!\nДля того чтобы начать занова нажмите [0]");
                Console.ResetColor();
                switch (Console.ReadKey(true).Key)
                {
                    case ConsoleKey.NumPad0:
                        goto LabelResetGame;
                }
            }
            if (doubler.CurrentValue == doubler.FinishValue)
            {
                Console.ForegroundColor = ConsoleColor.Green;
                Console.WriteLine("Вы победили!\nДля того чтобы начать занова нажмите [0]");
                Console.ResetColor();
                switch (Console.ReadKey(true).Key)
                {
                    case ConsoleKey.NumPad0:
                        goto LabelResetGame;
                }
            }
            Console.ForegroundColor = ConsoleColor.DarkRed;
            Console.WriteLine("1.Увеличить число на 1\n2.Умножить число на 2\n3.Сбросить число до 1\n4.Выход");
            Console.ResetColor();
        LabelReset:
            switch (Console.ReadKey(true).Key)
            {
                case ConsoleKey.NumPad1:
                    doubler.IncreaseValueBy1();
                    doubler.Step += 1;
                    goto LabelRefresh;
                case ConsoleKey.D1:
                    doubler.IncreaseValueBy1();
                    doubler.Step += 1;
                    goto LabelRefresh;
                case ConsoleKey.NumPad2:
                    doubler.MultiplyValueBy2();
                    doubler.Step += 1;
                    goto LabelRefresh;
                case ConsoleKey.D2:
                    doubler.MultiplyValueBy2();
                    doubler.Step += 1;
                    goto LabelRefresh;
                case ConsoleKey.NumPad3:
                    doubler.ResetValue();
                    doubler.Step += 1;
                    goto LabelRefresh;
                case ConsoleKey.D3:
                    doubler.ResetValue();
                    doubler.Step += 1;
                    goto LabelRefresh;
                case ConsoleKey.NumPad4:
                    Environment.Exit(0);
                    break;
                case ConsoleKey.D4:
                    Environment.Exit(0);
                    break;
                default:
                    goto LabelReset;
            }
        }
    }
    class Doubler
    {
        private int current = 19;
        private int finish = 20;
        public int Step = 0;
        public int CurrentValue
        { get { return current; } set { current = value; } }
        public int FinishValue
        { get { return finish; } set { finish = value; } }
        public void IncreaseValueBy1()
        {
            CurrentValue += 1;
        }
        public void MultiplyValueBy2()
        {
            CurrentValue *= 2;
        }
        public void ResetValue()
        {
            CurrentValue = 1;
        }
        public void StartGame()
        {
            var rnd = new Random();
            Step = 0;
            CurrentValue = 1;
            FinishValue = rnd.Next(5, 100);
        }
    }

}
